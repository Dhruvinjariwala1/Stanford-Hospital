@model StanfordHospital.Models.Appointment

@{
    ViewData["Title"] = "AddAppointment";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Add Appointment</h1>

<div>
    <a class="btn btn-primary" asp-action="Index">Back to List</a>
</div>
<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-action="AddAppointment" class="row g-3" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group col-md-6">
                <label asp-for="Patientid" class="control-label">Select Patient<span asp-validation-for="Patientid" class="text-danger"></span></label>
                <select asp-for="Patientid" class="form-control" asp-items="@(ViewBag.Patients as SelectList)"></select>
            </div>
            <div class="form-group col-md-6">
                <label asp-for="Id" class="control-label">Select Doctor<span asp-validation-for="Id" class="text-danger"></span></label>
                <select asp-for="Id" class="form-control" asp-items="@(ViewBag.Doctors as SelectList)"></select>
            </div>
            <div class="form-group col-md-6">
                <label asp-for="AppointmentDate" class="control-label">Appointment Date<span asp-validation-for="AppointmentDate" class="text-danger"></span></label>
                <input asp-for="AppointmentDate" class="form-control" type="date" value="@DateTime.Now.ToString("yyyy-MM-dd")" />
            </div>
            <div class="form-group col-md-6">
                <label asp-for="AppointmentTime" class="control-label">Appointment Time<span asp-validation-for="AppointmentTime" class="text-danger"></span></label>
                <input asp-for="AppointmentTime" class="form-control" type="time" />
            </div>
            <div class="form-group col-md-6">
                <label asp-for="AppointmentStatus" class="control-label">Appointment Status<span asp-validation-for="AppointmentStatus" class="text-danger"></span></label>
                <select asp-for="AppointmentStatus" class="form-control">
                    <option value="Completed">Completed</option>
                    <option value="Pending">Pending</option>
                    <option value="Canceled">Canceled</option>
                </select>
            </div>
            <div class="form-group col-md-6">
                <label asp-for="ReasonForAppointment" class="control-label">Reason For Appointment<span asp-validation-for="ReasonForAppointment" class="text-danger"></span></label>
                <textarea asp-for="ReasonForAppointment" class="form-control" cols="5" rows="3"></textarea>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary">Create</button>
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
