@model StanfordHospital.Models.Appointment

@{
    ViewData["Title"] = "EditAppointment";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Edit Appointment</h1>

<div>
    <a class="btn btn-primary" asp-action="Appointment">Back to List</a>
</div>
<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-action="EditAppointment" class="row g-3">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Appointmentid" />
            <div class="form-group col-md-6">
                <label asp-for="Patientid" class="control-label"></label>
                <select asp-for="Patientid" class="form-control" asp-items="@(ViewBag.Patients as SelectList)">
                    <option value="">Select Patient</option>
                </select>
                <span asp-validation-for="Patientid" class="text-danger"></span>
            </div>
            <div class="form-group col-md-6">
                <label asp-for="Id" class="control-label"></label>
                <select asp-for="Id" class="form-control" asp-items="@(ViewBag.Doctors as SelectList)">
                    <option value="">Select Doctor</option>
                </select>
                <span asp-validation-for="Id" class="text-danger"></span>
            </div>
            <div class="form-group col-md-6">
                <label asp-for="AppointmentDate" class="control-label"></label>
                <input asp-for="AppointmentDate" class="form-control" type="date" value="@DateTime.Now.ToString("yyyy-MM-dd")" />
                <span asp-validation-for="AppointmentDate" class="text-danger"></span>
            </div>
            <div class="form-group col-md-6">
                <label asp-for="AppointmentTime" class="control-label"></label>
                <input asp-for="AppointmentTime" class="form-control" type="time" />
                <span asp-validation-for="AppointmentTime" class="text-danger"></span>
            </div>
            <div class="form-group col-md-6">
                <label asp-for="AppointmentStatus" class="control-label"></label>
                <select asp-for="AppointmentStatus" class="form-control">
                    <option value="completed">Completed</option>
                    <option value="pending">Pending</option>
                    <option value="canceled">Canceled</option>
                </select>
                <span asp-validation-for="AppointmentStatus" class="text-danger"></span>
            </div>
            <div class="form-group col-md-6">
                <label asp-for="ReasonForAppointment" class="control-label"></label>
                <textarea asp-for="ReasonForAppointment" class="form-control" cols="5" rows="3"></textarea>
                <span asp-validation-for="ReasonForAppointment" class="text-danger"></span>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-warning" >Save</button>
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
